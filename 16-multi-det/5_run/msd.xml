<simulation>
  <project id="c2" series="0">
    <application name="qmcapp" role="molecu" class="serial" version="1.0"/>
  </project>
  <qmcsystem>
    <simulationcell>
      <parameter name="lattice" units="bohr">
0.0 3.40150702422 3.40150702422
3.40150702422 0.0 3.40150702422
3.40150702422 3.40150702422 0.0
</parameter>
      <parameter name="bconds">p p p</parameter>
      <parameter name="LR_dim_cutoff">15.0</parameter>
    </simulationcell>
    <particleset name="e" random="yes">
         <group name="u" size="4" mass="1.0">
            <parameter name="charge"              >    -1                    </parameter>
            <parameter name="mass"                >    1.0                   </parameter>
         </group>
         <group name="d" size="4" mass="1.0">
            <parameter name="charge"              >    -1                    </parameter>
            <parameter name="mass"                >    1.0                   </parameter>
         </group>
      </particleset>
    <particleset name="ion0">
      <group name="C" size="2">
        <parameter name="charge">4</parameter>
        <parameter name="valence">4</parameter>
        <attrib condition="0" datatype="posArray" name="position">
0.0 0.0 0.0
1.70075351211 1.70075351211 1.70075351211
</attrib>
      </group>
    </particleset>
    <wavefunction name="psi0" target="e">
      <sposet_builder type="bspline" href="../4_dets_eig/pyscf2pwscf.h5" tilematrix="1 0 0 0 1 0 0 0 1" twistnum="0" source="ion0" version="0.10" meshfactor="1.0" precision="float" truncate="no">
        <sposet type="bspline" name="spo-up" size="8" spindataset="0"/>
        <sposet type="bspline" name="spo-dn" size="8" spindataset="0"/>
      </sposet_builder>
      <determinantset>
        <multideterminant optimize="yes" spo_up="spo-up" spo_dn="spo-dn">
	  <detlist size="2" type="DETS" nca="0" ncb="0" nea="4" neb="4" nstates="8" cutoff="0.01">
            <ci id="CIcoeff_0" coeff="0.21" alpha="11110000" beta="11110000"/>
            <ci id="CIcoeff_1" coeff="0.23" alpha="00001111" beta="00001111"/>
          </detlist>
        </multideterminant>
      </determinantset>
    </wavefunction>
    <hamiltonian name="h0" type="generic" target="e">
       <constant type="coulomb" name="IonIon" source="ion0" target="ion0"/>
       <pairpot type="coulomb" name="ElecElec" source="e" target="e"/>
       <pairpot type="pseudo" name="PseudoPot" source="ion0" wavefunction="psi0" format="xml">
          <pseudo elementType="C" href="C.BFD.xml"/>
       </pairpot>
    </hamiltonian>
  </qmcsystem>
  <qmc method="vmc" move="pbyp">
    <parameter name="blocks">100</parameter>
    <parameter name="steps">10</parameter>
    <parameter name="timestep">1.0</parameter>
  </qmc>
</simulation>
